<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.iu.s5.qna.QnaDAO">

	<!-- 전체 글의 갯수 -->
	<select id="boardCount" resultType="java.lang.Long">
		select count(num) from notice
	</select>
	
	<select id="boardList" parameterType="java.util.Map" resultType="com.iu.s5.qna.QnaVO">
		select * from 
			(select N.*,rownum R from 
				(select * from notice order by num desc) N)
		where R between #{startRow} and #{lastRow}
	</select>
	
	 <insert id="boardWrite" parameterType="com.iu.s5.qna.QnaVO">
		 insert into notice values(board_seq.nextval,#{title},#{writer},#{contents}, sysdate,0)
	 </insert>
		
	<select id="boardSelect" parameterType="java.lang.Long" resultType="com.iu.s5.qna.QnaVO">
		select * from notice where num=#{num}
	</select>

	<update id="hitUpdate" parameterType="java.lang.Long">
	 	update notice set hit=hit+1 where num=#{num}
	 </update>
	
	 <delete id="boardDelete" parameterType="java.lang.Long">
	 	delete notice where num=#{num}
	 </delete>
	 
	  <update id="boardUpdate" parameterType="com.iu.s5.qna.QnaVO">
	 	update notice set title=#{title}, contents=#{contents} where num=#{num}
	 </update>
	

</mapper>